@model Generic.Dapper.Model.SharingPartyObj
    <div class="modal-dialog" style="width:480px">
        <div class="modal-content">
@using (Html.BeginForm("AddParty", "Biller", FormMethod.Post, new { id = "formParty" }))
{
    @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h5 class="modal-title" id="myModalLabel"><i class="fa fa-plus"></i> @ViewBag.HeaderTitle</h5>
            </div>
            
            <div class="modal-body">
                <div class="col-lg-12">
                    <div class="alert alert-dismissable alert-warning" style="display:none" id="notyParty">
                        <div id="notyPartyMsg">
                        </div>
                    </div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-4 control-label"> Party Type <span class="required">*</span></label>
                            <div class="col-lg-8">
                                @Html.HiddenFor(model => model.ITBID)
                                @Html.Hidden("DB_ITBID", Model.DB_ITBID)
                                @Html.HiddenFor(model => model.PID)
                                @Html.HiddenFor(model => model.MERCHANTMSC_ITBID)
                                @Html.HiddenFor(model => model.BILLER_CODE)
                                @Html.HiddenFor(model => model.PARTY_LOCATOR)
                                @Html.DropDownListFor(model => model.PARTYTYPE_CODE, ViewBag.PartyList as SelectList, "Select One", new { @class = "form-control select2", style = "width:100%" })
                            </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Sharing Value <span class="required">*</span></label>
                                <div class="col-lg-8 ">
                                    <div class="form-group input-groupa" style="margin:0px">
                                        @Html.TextBoxFor(model => model.SHARINGVALUE,"{0:0.00}", new { @class = "form-control input-sm", style="width:150px" })
                                    </div>
                                </div>
                            </div>
                        @*<div class="form-group">
                            <label class="col-lg-4 control-label">Sharing Cap <span class="required">*</span></label>
                            <div class="col-lg-8 ">
                                <div class="form-group input-groupa" style="margin:0px">
                                    @Html.TextBoxFor(model => model.CAP, "{0:0.00}", new { @class = "form-control input-sm", style = "width:150px" })
                                </div>
                            </div>
                        </div>*@
                        @*<div class="form-group">
                            <label class="col-lg-4 control-label"> Account No.</label>
                            <div class="col-lg-8">
                                @Html.DropDownListFor(model => model.ACCOUNT_ID, ViewBag.AccountList as SelectList, "--Select Account--", new { @class = "form-control select2", style = "width:100%" })
                            </div>
                        </div>*@
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button Id="btnAddPartyGrid" class="btn btn-primary"><i class="fa fa-plus"></i> @ViewBag.ButtonText</button>
            </div>
}
        </div>
        <!-- /.modal-content -->
    </div>

<script>
    $('.select2').select2({
        theme: "classic"
    });
   // $('a.editor_return').click();
</script>