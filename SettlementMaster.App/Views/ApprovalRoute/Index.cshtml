<div class="row" style="margin:10px">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-plus" style="color:#57ACE7;"></i>  Approval Route

            </div>
            <div class="panel-body ">
                @using (Html.BeginForm("Add", "ApprovalRoute", FormMethod.Post, new { id = "formAppRoute" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="m" id="m" value="@ViewBag.MenuId" />
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-lg-3 control-label"> Menu <span class="required">*</span></label>
                                <div class="col-lg-5">
                                    @Html.DropDownList("MenuId", ViewBag.MenuList as SelectList, "Select One", new { @class = "form-control select2", style = "width:100%" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label"> Approval No. <span class="required">*</span></label>
                                <div class="col-lg-2">
                                    @Html.TextBox("NoLevel","", new { @class = "form-control input-sm",@type="number",style="width:80px" })
                                </div>
                            </div>
                            
                            <div class="clearfix"></div>
                            <h4><label>Approver List</label></h4>
                            <div style="margin-bottom:5px">

                                <div class="table-responsive " style="border: 1px solid #f4f4f4;background-color:#f7f7f7;margin-bottom:10px;padding:20px">

                                    <div class="divadu">
                                        <div id="divAccta">
                                            <table id="tblRouteLocal" class="table table-condensed table-hover table-bordered" style="width:100%">

                                                <thead>
                                                  
                                                    <tr>
                                                        <th style="width:10%;text-align:center">S/N</th>
                                                        <th style="width:10%;text-align:center">Action?</th>
                                                        <th>
                                                            Full Name
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <h4>
                                <label>Approver List Queue</label>
                                <small style="color:indianred">List of "New/Updated" Approver Item to be forwarded for authorization </small>
                            </h4>
                            <div style="margin-bottom:5px">

                                <div class="table-responsive " style="border: 1px solid #f4f4f4;background-color:#f7f7f7;margin-bottom:10px;padding:20px">

                                    <div class="divadu">
                                        <div id="divAcct">
                                            <table id="tblRoute" class="table table-condensed table-hover table-bordered" style="width:100%">

                                                <thead>
                                                    <tr>
                                                        <th style="width:10%;text-align:center">S/N</th>
                                                        <th style="width:10%;text-align:center">Action?</th>
                                                        <th>
                                                            Full Name
                                                        </th>
                                                        <th>Event Type</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <hr />
                            @if (ViewBag.CanAdd == true || ViewBag.CanEdit == true)
                            {
                                <div style="text-align:center">
                                    <button type="submit" class="btn btn-primary btn_disable" id="btnSave" value="1"><i class="fa fa-save"></i> Update</button>

                                </div>
                            }
                            
                        </div>
                }
            </div>
        </div>
    </div>

</div>
@*</div>*@
<div class="modal fade" id="myModalRoute" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

</div>
<div class="clearfix"></div>



@section Scripts {
    @if (ViewBag.Message != null)
    {

        var msg = @Html.Raw(Json.Encode(ViewBag.Message));
        <script>
        displayDialogNoty('Notification',@msg) ;
        </script>

    }
    @Scripts.Render("~/Scripts/app/app_route.js")
}
