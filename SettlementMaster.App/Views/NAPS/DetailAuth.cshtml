                                                  }
                                                  else {
                                                      displayDialogNoty('Notification', response.RespMessage);
                                                  }
                                              }).fail(function (xhr, status, err) {
                                                  loaderSpin2(false);
                                                  disableButton(false);
                                                  displayDialogNoty('Notification', 'No network connectivity. Please check your network connections.', true);
                                              });
                                          })


