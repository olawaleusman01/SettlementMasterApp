@model List<Generic.Dapper.Model.SettlementRuleObj>
<table id="tableAcct" class="table table-condensed table-hover table-bordered" style="width:100%">
    <thead>
       <tr><th colspan="4"><a id="btnAddAcct" class="btn btn-info btn-xs"><i class="fa fa-plus"></i> Add Party Type</a></th></tr>
        <tr>
            <th style="width:10%;text-align:center">Action?</th>
            <th>
                Party Type
            </th>
            <th>
                Share Rate (%)
            </th>
            <th>
                Share Cap
            </th>
            
        </tr>
    </thead>
    <tbody>

        @foreach(var d in Model)
        {
            <tr>
                <td style="text-align:center">
                    @if (!d.Deleted)
                    {
                    <a class="btn btn-info btn-xs" id="edit" data-key="@d.ITBID" title="Edit Record"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" id="delete" data-key="@d.ITBID" title="Delete Record"><i class="fa fa-trash"></i></a>
                    }
                    else
                    {
                        <a class="btn btn-warning btn-xs" id="undo" title="Undo Delete" data-key="@d.ITBID"><i class="fa fa-undo"></i></a>

                    }
                </td>
                <td>@d.PARTYTYPE_CODE</td>
                <td>@d.PARTYTYPE_VALUE</td>
                <td>@d.PARTYTYPE_CAP</td>
            </tr>
        }
    </tbody>
</table>
