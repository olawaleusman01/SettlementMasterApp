<div class="row" id="upload" style="margin:10px">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-upload" style="color:#57ACE7;"></i>System  Settlement Reconciliation <a style="color:#E67819" class="btn btn-default btn-xs" href="@Url.Content("~/Uploadtemplate/setrecontemplateformat.xlsx")"><i class="fa fa-file-excel-o"></i>  Download Upload Template</a>
            </div>
            <div class="panel-body ">
                <div class="col-lg-12">
                    <div style="background-color:#F4F4F4;margin-bottom:10px;padding:10px">
                        @using (Html.BeginForm("DownloadSetRecon", "SetReconciliation", FormMethod.Post, new { id = "formUpload", }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.TextBox("upldfile", "", new { @style = "display:inline", type = "file" })

                            <button id="btnUpload" class="btn btn-default pull-righta"><i class="fa-upload fa"></i> Upload</button>
                            <button id="btnValidate" class="btn btn-info pull-righta" disabled><i class="fa-cog fa"></i> Process</button>
                            <button id="btnDownload" class="btn btn-success pull-righta" disabled><i class="fa-file fa"></i> Download</button>


                                <div class="clearfix"></div>
                        }
                    </div>
                    <div id="divGrid">
                        <div class="table-responsive divad2a">
                            <table id="tblUpld" class="table table-striped table-condensed table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width:10%"> S/N</th>
                                        <th style="width:15%">
                                            PAYREF. NO.
                                        </th>
                                        <th style="width:25%"> AMOUNT</th>
                                        <th style="width:20%"> PAYMENT DATE</th>
                                        <th style="width:20%"> VALUE DATE  </th>
                                        @*<th style="width:25%"> RECEIPT NO.</th>*@
                                        <th style="width:40%"> CUSTOMER NAME</th>
                                        <th style="width:20%"> PAYMENT METHOD</th>
                                        @*<th style="width:20%"> TRANS STATUS  </th>
                                        <th style="width:30%"> DEPOSIT SLIP NO</th>*@
                                        <th style="width:20%"> BANK NAME</th>
                                        @*<th style="width:20%"> BRANCH NAME  </th>
                                        <th style="width:30%"> PAYER ID</th>
                                        <th style="width:20%"> VALUE GARANTED</th>*@
                                        @*<th style="width:20%"> RECONCILE</th>*@
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*</div>*@
</div>
