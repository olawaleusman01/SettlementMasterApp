@model List<Generic.Dapper.Model.Rpt_ApprovalDetail>
<style>
    #example1 td {
        white-space: nowrap;
    }

    #tblUpld th {
        font-size: 11px;
    }

    .popover {
        max-width: 500px !important;
    }
</style>


<div class="modal-dialog" style="width:650px">
    <div class="modal-content">
     
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h5 class="modal-title" id="myModalLabel"><i class="fa fa-list"></i>  Approval Details</h5>
            </div>

            <div class="modal-body">
                @*<div class="col-lg-12">*@
                    <div class="table-responsive divad2a">
                        <table id="tblUpld" class="table table-striped table-condensed table-bordered">
                            <thead>
                                <tr>
                                    <th class="auto-style1">USER NAME</th>
                                    <th>FULL NAME </th>
                                    <th>INSTITUTION NAME</th>
                                    <th>CREATE DATE </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var cnt = 0;
                                    if (Model != null)
                                    {
                                        foreach (var d in Model)
                                        {
                                            cnt++;
                                            <tr data-toggle="popover" data-trigger="hover" data-html="true">

                                                <td> @d.UserId</td>
                                                <td> @d.FullName</td>
                                                <td> @d.InstitutionName</td>
                                                <td> @d.CreateDate</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                @*</div>*@
            </div>
        
    </div>
    <!-- /.modal-content -->
</div>
<script>
    $("[data-toggle=popover]").popover();
</script>