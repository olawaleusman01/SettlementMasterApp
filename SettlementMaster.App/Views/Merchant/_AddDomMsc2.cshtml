@model Generic.Dapper.Model.SharingPartyObj
    <div class="modal-dialog" style="width:480px">
        <div class="modal-content">
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "formDomMsc2" }))
{
    @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h5 class="modal-title" id="myModalLabel"><i class="fa fa-plus"></i> @ViewBag.HeaderTitle</h5>
            </div>
            
            <div class="modal-body">
                <div class="col-lg-12">
                    <div class="alert alert-dismissable alert-warning" style="display:none" id="notyDomMsc2">
                        <div id="notyDomMsc2Msg">
                        </div>
                    </div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-4 control-label"> Party/Institution <span class="required">*</span></label>
                            <div class="col-lg-8">
                                @Html.HiddenFor(model => model.ITBID)
                                @Html.HiddenFor(model => model.MERCHANTMSC_ITBID)
                                @Html.HiddenFor(model => model.MCCMSC_ITBID)
                                @Html.DropDownListFor(model => model.PARTY_ID, ViewBag.PartyList as SelectList, "Select One", new { @class = "form-control select2", style = "width:100%" })
                            </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Sharing Value <span class="required">*</span></label>
                                <div class="col-lg-8 ">
                                    <div class="form-group input-groupa" style="margin:0px">
                                        @Html.TextBoxFor(model => model.SHARINGVALUE,"{0:0.00}", new { @class = "form-control input-sm", style="width:150px" })
                                    </div>
                                </div>
                            </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Sharing Cap <span class="required">*</span></label>
                            <div class="col-lg-8 ">
                                <div class="form-group input-groupa" style="margin:0px">
                                    @Html.TextBoxFor(model => model.CAP, "{0:0.00}", new { @class = "form-control input-sm", style = "width:150px" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label"> Account No.</label>
                            <div class="col-lg-8">
                                @Html.DropDownListFor(model => model.ACCOUNT_ID, ViewBag.AccountList as SelectList, "--Select Account--", new { @class = "form-control select2", style = "width:100%" })
                            </div>
                        </div>
                        @if (Model.PARTYITBID == 1 && Model.PARTY_LOCATOR == "I")
                        {
                        <div class="form-group">
                            <label class="col-lg-4 control-label"> Split Income?</label>
                            <div class="col-lg-8">
                                @Html.CheckBoxFor(model => model.splitincome)
                            </div>
                        </div>
                            if (Model.splitincome == true)
                            {
                            <div class="form-group" id="divIncomeChk">
                                <label class="col-lg-4 control-label"> Account No.</label>
                                <div class="col-lg-8">
                                    @Html.DropDownListFor(model => model.ACCOUNT_ID2, ViewBag.AccountList as SelectList, "--Select Account--", new { @class = "form-control select2", style = "width:100%" })
                                </div>
                            </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label"> Rate 1 <span class="required">*</span></label>
                            <div class="col-lg-3">
                                <div class="form-group input-groupa" style="margin:0px">
                                    @Html.TextBoxFor(model => model.sharingRateAccount1, "{0:0.00}", new { @class = "form-control input-sm", style = "width:100px" })
                                </div>
                            </div>
                            <label class="col-lg-3 control-label"> Rate 2 <span class="required">*</span></label>
                            <div class="col-lg-3">
                                <div class="form-group input-groupa" style="margin:0px">
                                    @Html.TextBoxFor(model => model.sharingRateAccount2, "{0:0.00}", new { @class = "form-control input-sm", style = "width:100px" })
                                </div>
                            </div>
                        </div>

                            }
                            else
                            {
                            <div style="display:none" id="divShareIncome">
                                <div class="form-group">
                                    <label class="col-lg-4 control-label"> Account No.</label>
                                    <div class="col-lg-8">
                                        @Html.DropDownListFor(model => model.ACCOUNT_ID2, ViewBag.AccountList as SelectList, "--Select Account--", new { @class = "form-control select2", style = "width:100%" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label"> Rate 1 <span class="required">*</span></label>
                                    <div class="col-lg-3">
                                        <div class="form-group input-groupa" style="margin:0px">
                                            @Html.TextBoxFor(model => model.sharingRateAccount1, "{0:0.00}", new { @class = "form-control input-sm", style = "width:100px" })
                                        </div>
                                    </div>
                                    <label class="col-lg-3 control-label"> Rate 2 <span class="required">*</span></label>
                                    <div class="col-lg-3">
                                        <div class="form-group input-groupa" style="margin:0px">
                                            @Html.TextBoxFor(model => model.sharingRateAccount2, "{0:0.00}", new { @class = "form-control input-sm", style = "width:100px" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                                    }
                                }
                                else
                                {
                            <div class="form-group" id="divIncomeChk" style="display:none">
                                <label class="col-lg-4 control-label"> Split Income?</label>
                                <div class="col-lg-8">
                                    @Html.CheckBoxFor(model => model.splitincome)
                                </div>
                            </div>
                            <div style="display:none" id="divShareIncome">
                                <div class="form-group">
                                    <label class="col-lg-4 control-label"> Account No.</label>
                                    <div class="col-lg-8">
                                        @Html.DropDownListFor(model => model.ACCOUNT_ID2, ViewBag.AccountList as SelectList, "--Select Account--", new { @class = "form-control select2", style = "width:100%" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label"> Rate 1 <span class="required">*</span></label>
                                    <div class="col-lg-3">
                                        <div class="form-group input-groupa" style="margin:0px">
                                            @Html.TextBoxFor(model => model.sharingRateAccount1, "{0:0.00}", new { @class = "form-control input-sm", style = "width:100px" })
                                        </div>
                                    </div>
                                    <label class="col-lg-3 control-label"> Rate 2 <span class="required">*</span></label>
                                    <div class="col-lg-3">
                                        <div class="form-group input-groupa" style="margin:0px">
                                            @Html.TextBoxFor(model => model.sharingRateAccount2, "{0:0.00}", new { @class = "form-control input-sm", style = "width:100px" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button Id="btnAddDomMsc2Grid" class="btn btn-primary"><i class="fa fa-plus"></i> @ViewBag.ButtonText</button>
            </div>
}
        </div>
        <!-- /.modal-content -->
    </div>

<script>
    $('.select2').select2({
        theme: "classic"
    });
   // $('a.editor_return').click();
</script>